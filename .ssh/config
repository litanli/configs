    # LocalForward 8080 localhost:8080
    # LocalForward 45555 localhost:45555 

Host ls6
    HostName login2.ls6.tacc.utexas.edu
    User litanli
    
Host github.com
    AddKeysToAgent yes
    UseKeychain yes
    IdentityFile ~/.ssh/github

Host aos
    HostName localhost
    Port 2222
    User aos


# avoid getting kicked off ssh'd servers
Host *
    ServerAliveInterval 60
    ServerAliveCountMax 120

